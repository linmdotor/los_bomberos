    void setOption(string option){
        m_Option = option;
        if (m_Option == "FireSuit")
        {
            m_DeathTime += 10;
        }
        if (m_Option == "HugeEx")
        {
            m_HugeExtinguisher.SetActive(true);
            m_Extinguisher.SetActive(false);
        }
    }

    void isDead()
    {
        GameManager.m_instance.setDeadPlayer(this.name);
        gameObject.SetActive(false);
